# LAYER_CONF_VERSION is increased each time build/conf/bblayers.conf
# changes incompatibly
LCONF_VERSION = "6"

BBPATH = "${TOPDIR}"
BBFILES ?= ""

BBLAYERS ?= " \
  ${HOME}/poky-dizzy/meta \
  ${HOME}/poky-dizzy/meta-yocto \
  ${HOME}/poky-dizzy/meta-openembedded/meta-oe \
  ${HOME}/poky-dizzy/meta-openembedded/meta-networking \
  ${HOME}/poky-dizzy/meta-openembedded/meta-python \
  ${HOME}/wandboard/meta-fsl-arm \
  ${HOME}/wandboard/meta-fsl-arm-extra \
  ${HOME}/wandboard/meta-wandboard \
  "

BBLAYERS_NON_REMOVABLE ?= " \
  ${HOME}/poky-dizzy/meta \
  ${HOME}/poky-dizzy/meta-yocto \
  "
